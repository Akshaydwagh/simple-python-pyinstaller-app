pipeline {
    agent any
    stages {
       
	   stage('scm checkout') {
	   
	   steps{
        git 'https://github.com/Akshaydwagh/simple-python-pyinstaller-app.git'
}
}

stage('checkout to different branch') {
steps{
sh "git branch -r"
sh "git checkout master"
}
}
    
        stage('Build') {
		      agent {
            
                any {
                    image 'python:2-alpine'
                }
				}
            
            steps {
                sh 'python -m py_compile sources/add2vals.py sources/calc.py'
		sh 'cp sources/*.py* /home/ec2-user/Akshay/
				
            }
        }
        stage('Test') {
             agent {
                any {
                    image 'qnib/pytest'
                }
				}
            
            steps {
                sh 'py.test --junit-xml results.xml sources/test_calc.py'
            }
           
        }
        }
    }
